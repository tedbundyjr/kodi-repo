<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.video.alluc.api" name="Alluc" provider-name="DudeHere" version="0.4.30">
    <requires>
        <import addon="xbmc.python" version="2.1.0" />
        <import addon="script.module.beautifulsoup" />
        <import addon="script.module.dudehere.routines" />
        <import addon="script.module.metahandler" version="2.2.0" />
        <import addon="script.module.addon.common" version="2.0.0" />
        <import addon="script.module.myconnpy" version="0.3.2" />
        <import addon="script.module.urlresolver" version="1.1.6" />
    </requires>
    <extension library="default.py" point="xbmc.python.pluginsource">
        <provides>video</provides>
    </extension>
